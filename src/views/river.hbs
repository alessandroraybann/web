<div class="wide-container clear-fix river">
  {{#each attrs.posts as |post|}}
    <a href="{{post.url}}" class="post{{#if post.pinned}} featured{{/if}}">
      {{#if post.photo}}
        <figure>
          <img {{#if post.photo.altText}}alt="{{post.photo.altText}}" {{/if}}src="{{post.photo.url}}" width={{post.photo.width}} height={{post.photo.height}}>
        </figure>
      {{/if}}
      <div>
        <h2>{{post.title}}</h2>
        <p>{{post.description}}</p>
      </div>
    </a>
  {{/each}}
</div>
